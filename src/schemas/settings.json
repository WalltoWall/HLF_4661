{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title",
        "placeholder": "Do not edit"
      }
    },
    "site_name": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Site Name",
        "placeholder": "Name of the site"
      }
    },
    "site_description": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph",
        "label": "Site Description",
        "placeholder": "Description of the site provided to search engines"
      }
    },
    "site_copyright": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph",
        "label": "Site Copyright",
        "placeholder": "Copyright text at the bottom of the site"
      }
    },
    "facebook_handle": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph",
        "label": "Facebook Handle",
        "placeholder": "Facebook URL handle"
      }
    },
    "linkedin_handle": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph",
        "label": "LinkedIn Handle",
        "placeholder": "LinkedIn URL handle"
      }
    },
    "newsletter_sign_up_link": {
      "type": "Link",
      "config": {
        "label": "Newsletter Sign Up Link",
        "placeholder": "Link to a page allowing visitors to sign up for the newsletter"
      }
    }
  },
  "Redirects": {
    "redirects": {
      "type": "Group",
      "config": {
        "fields": {
          "from_path": {
            "type": "Text",
            "config": {
              "label": "From Path",
              "placeholder": "URL from which to redirect"
            }
          },
          "to_path": {
            "type": "Text",
            "config": {
              "label": "To Path",
              "placeholder": "URL to which users will be redirect"
            }
          },
          "is_permanent": {
            "type": "Boolean",
            "config": {
              "placeholder_false": "No",
              "placeholder_true": "Yes, redirect forever",
              "default_value": false,
              "label": "Is Permanent"
            }
          }
        },
        "label": "Redirects"
      }
    }
  },
  "Developer Only": {
    "preview_map": {
      "type": "Group",
      "config": {
        "fields": {
          "api_id": {
            "type": "Text",
            "config": {
              "label": "API ID",
              "placeholder": "Custom type API ID"
            }
          },
          "page": {
            "type": "Link",
            "config": {
              "label": "Page",
              "placeholder": "Page to resolve documents of this custom type"
            }
          }
        },
        "label": "Preview Map"
      }
    }
  }
}
