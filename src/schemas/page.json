{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "UID",
        "placeholder": "Unique identifier"
      }
    },
    "meta_title": {
      "type": "Text",
      "config": {
        "label": "Meta Title",
        "placeholder": "Optional - Override the publicly viewable page title"
      }
    },
    "meta_description": {
      "type": "Text",
      "config": {
        "label": "Meta Description",
        "placeholder": "Optional - One sentence description of the page's content"
      }
    },
    "parent": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["page"],
        "label": "Parent",
        "placeholder": "Optional - Parent of the page"
      }
    },
    "redirect_to": {
      "type": "Link",
      "config": {
        "label": "Redirect To",
        "placeholder": "Optional - Redirect this page to another page or external URL"
      }
    },
    "redirect_is_permanent": {
      "type": "Boolean",
      "config": {
        "placeholder_false": "No",
        "placeholder_true": "Yes, redirect forever",
        "default_value": false,
        "label": "Redirect Is Permanent",
        "placeholder": "Test"
      }
    }
  },
  "Body": {
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {
          "images": [],
          "text": [],
          "embed": [],
          "hero_image": []
        },
        "choices": {
          "text": {
            "type": "Slice",
            "fieldset": "Text",
            "description": "Rich text with headings and links",
            "icon": "text_fields",
            "display": "list",
            "non-repeat": {
              "text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, heading1, strong, em, hyperlink, embed, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "Text",
                  "placeholder": "Text with formatting and rich content"
                }
              }
            },
            "repeat": {}
          },
          "images": {
            "type": "Slice",
            "fieldset": "Images",
            "description": "One or more images with optional captions",
            "icon": "burst_mode",
            "display": "grid",
            "non-repeat": {},
            "repeat": {
              "image": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": 2000
                  },
                  "thumbnails": [],
                  "label": "Image"
                }
              },
              "caption": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Caption",
                  "placeholder": "Optional - Caption below image"
                }
              }
            }
          },
          "anchor": {
            "type": "Slice",
            "fieldset": "Anchor",
            "description": "Page marker to jump a user down the page",
            "icon": "adjust",
            "display": "list",
            "non-repeat": {
              "id": {
                "type": "Text",
                "config": {
                  "label": "ID",
                  "placeholder": "Anchor ID used in links"
                }
              }
            },
            "repeat": {}
          },
          "hero_image": {
            "type": "Slice",
            "fieldset": "Hero Image",
            "description": "Large image with overlayed text and optional button",
            "icon": "photo_size_select_actual",
            "display": "list",
            "non-repeat": {
              "text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, heading1",
                  "label": "Text",
                  "placeholder": "Text displayed over the background image"
                }
              },
              "button_text": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Button Text",
                  "placeholder": "Optional - Text for the button link"
                }
              },
              "button_link": {
                "type": "Link",
                "config": {
                  "label": "Button Link",
                  "placeholder": "Optional - Link for the button"
                }
              },
              "background_image": {
                "type": "Image",
                "config": {
                  "constraint": {},
                  "thumbnails": [],
                  "label": "Background Image"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  }
}
